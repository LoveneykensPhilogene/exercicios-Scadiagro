                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="Arial Bold" size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="nTxtSalario" layoutX="210.0" layoutY="192.0" maxWidth="-Infinity"
                                   minWidth="-Infinity" prefHeight="25.0" prefWidth="120.0"/>
