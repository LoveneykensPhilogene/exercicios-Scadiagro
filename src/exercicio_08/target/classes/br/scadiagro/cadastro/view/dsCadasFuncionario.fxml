            <children>
                <VBox cache="true" cacheHint="QUALITY" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
                      prefWidth="600.0">
                    <children>
                        <HBox fx:id="HBoxCadastro" prefHeight="100.0" prefWidth="200.0">
