                                <Cursor fx:constant="CLOSED_HAND"/>
                            </cursor>
                            <font>
                                <Font name="Arial Bold" size="12.0"/>
                            </font>
                        </TextField>
                        <Label layoutX="10.0" layoutY="110.0" text="Nome">
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="Arial Bold" size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="sTxtNome" layoutX="210.0" layoutY="141.0" maxWidth="-Infinity"
