                            <children>
                                <Button fx:id="btnCadastrar" mnemonicParsing="false" onAction="#BtnCadastrar"
                                        text="Cadastrar">
                                    <HBox.margin>
                                        <Insets right="10.0"/>
                                    </HBox.margin>
                                    <font>
                                        <Font name="Arial Bold" size="14.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="btnFechar" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                                        onAction="#BtnFechar" text="Fechar">
                                    <HBox.margin>
                                        <Insets left="10.0"/>
                                    </HBox.margin>
                                    <font>
                                        <Font name="Arial Bold" size="14.0"/>
                                    </font>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                    <padding>
                        <Insets left="200.0"/>
                    </padding>
                </VBox>
            </children>
        </Pane>
    </children>
</AnchorPane>
